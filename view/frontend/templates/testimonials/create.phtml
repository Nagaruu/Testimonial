<h3>Testimonial Create Form</h3>
<div class="testimonial-create-form">
    <form class="testimonial-blog-create" method="post" enctype="multipart/form-data" action="<?= $block->getUrl('testimonials/index/save')?>">
        <div class="testimonial-blog-create-right">
            <img src="" alt="" class="image-upload" />
        </div>

        <div class="testimonial-blog-create-left">
            <label for="name">First Name</label>
            <input type="text" name="name" placeholder="Your name..">

            <label for="email">Email</label>
            <input type="text" name="email" placeholder="Your email..">

            <label for="designation">Designation</label>
            <input type="text" name="designation" placeholder="Your designation..">

            <label for="contact">Contact</label>
            <input type="number" name="contact" placeholder="Your contact..">

            <label for="message">Message</label>
            <textarea name="message" rows="10" cols="30" placeholder="This is your message.."></textarea>

            <input type="submit" name="createBtn" class="createBtn" value="Submit">
        </div>
    </form>
</div>
<script>
    require(['jquery', 'jquery/ui'], function($){

        // Upload Image
        $('.testimonial-blog-create-right').click(() => {
            //Click chon file
            const inputFile = document.createElement('input');
            inputFile.setAttribute('type', 'file');
            inputFile.setAttribute('name', 'images');
            inputFile.setAttribute('class', 'd-none');
            inputFile.click();

            //Upload duoc anh;
            $('.testimonial-blog-create-right').append(inputFile);
            inputFile.addEventListener('change', (e) => {
                if(inputFile.files.length > 0) {
                    const file = inputFile.files[0];
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('.image-upload').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });
        });
    });
</script>

